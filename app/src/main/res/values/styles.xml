<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyCompatTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/main_textcolor</item>
    </style>

    <style name="PwsdkCustomTheme" parent="@style/PaymentwallSDKTheme">
        <item name="colorMain">@color/main_textcolor</item>
        <item name="textMain">@color/white</item>
        <item name="mainBackground">@color/pw_secondary_color</item>
        <item name="bgProductInfo">@color/pw_primary_color</item>
        <item name="bgProductInfoLand">@color/pw_primary_color</item>
        <item name="textProductInfo">#FF0000</item>
        <item name="bgPsButton">@drawable/green_button_drawable</item>
        <item name="textPsButton">@color/saas_textPrimary</item>
        <item name="textCopyright">@color/white</item>
        <item name="bgInputForm">@drawable/saas_bg_input_form</item>
        <item name="bgInputErrorForm">@drawable/saas_bg_input_form_error</item>
        <item name="textInputForm">@color/saas_textPrimary</item>
        <item name="textInputErrorForm">@color/input_form_error</item>
        <item name="iconErrorForm">@drawable/ic_form_error</item>
        <item name="textFormTitle">@color/white</item>
        <item name="bgConfirmButton">@drawable/payment_button_drawable</item>
        <item name="textConfirmButton">@color/white</item>
        <item name="backButton">@drawable/cloud</item>
        <item name="bgExpDialog">@color/main_textcolor</item>
        <item name="textExpDialog">@color/white</item>
        <item name="monthButtonNormal">@drawable/green_button_ninepatch</item>
        <item name="monthButtonPressed">@drawable/green_button_ninepatch_pressed</item>
        <item name="textMonth">@color/white</item>
        <item name="yearLeftArrow">@drawable/item_gem</item>
        <item name="yearRightArrow">@drawable/item_mana</item>
        <item name="bgNotifyDialog">@color/black</item>
        <item name="progressColor">@color/main_textcolor</item>
        <item name="successIcon">@drawable/ic_form_error</item>
        <item name="failIcon">@drawable/ic_scan_card</item>
        <item name="textProgress">@color/white</item>
        <item name="textSuccess">@color/main_textcolor</item>
        <item name="textFail">@color/main_textcolor</item>
        <item name="textExtraMessage">@color/main_textcolor</item>
    </style>


    <style name="BaseBrightnessDialogContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BrightnessDialogContainer" parent="@style/BaseBrightnessDialogContainer" />

    <style name="Animation" />


    <!-- Standard animations for hiding and showing the status bar. -->
    <style name="Animation.StatusBar"></style>

    <style name="QSBorderlessButton">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/btn_borderless_rect</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchPanelCircle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SearchPanelScrim">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_panel_scrim_height</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="UserDetailView">
        <item name="numColumns">3</item>
    </style>

</resources>
