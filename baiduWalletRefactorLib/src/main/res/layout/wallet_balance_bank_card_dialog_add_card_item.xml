<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bd_wallet_white"
        android:orientation="vertical"
        >
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bd_wallet_dialog_linegray_d9d9d9"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/wallet_base_bank_card_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

        <com.baidu.wallet.base.widget.NetImageView
                android:id="@+id/wallet_balance_new_card_logo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bd_wallet_add_card"
                android:layout_weight="2"
                />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

            <TextView
                    android:id="@+id/wallet_balance_bankcard_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/ebpay_text_111111"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

        </RelativeLayout>

        <ImageView
                android:id="@+id/bank_card_select_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:src="@drawable/wallet_base_right_arrow"
                android:scaleType="fitStart"
                android:background="@color/ebpay_transparent"
                android:layout_weight="1"
                android:gravity="center"
                />

    </LinearLayout>

</LinearLayout>