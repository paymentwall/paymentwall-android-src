<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/bd_wallet_white"
              android:paddingTop="@dimen/bd_wallet_normal_item_top_margin"
        >

    <TextView
            android:id="@+id/top_show_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textColor="@color/ebpay_text_red_queqiao"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            >
        <com.baidu.wallet.base.widget.NetImageView
                android:id="@+id/partener_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/wallet_base_authorize_wallet_logo"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/wallet_base_authorize_line"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                />

        <ImageView
                android:id="@+id/wallet_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/wallet_base_authorize_wallet_logo"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/bottom_show_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:textColor="@color/ebpay_text_999999"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            />

    <View
            android:id="@+id/goods_divider"
            style="@style/bd_wallet_divier_short"
            />

    <LinearLayout
            android:id="@+id/goods_pannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            >

        <TextView
                android:id="@+id/good_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="@color/ebpay_text_999999"
                />

        <TextView
                android:id="@+id/good_discount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="9dp"
                android:textColor="@color/bd_wallet_white"
                android:background="@drawable/wallet_base_authorize_corners_bg"
                android:layout_marginLeft="3dp"
                android:padding="1.5dp"
                />

        <TextView
                android:id="@+id/good_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="@color/ebpay_text_red_queqiao"
                android:layout_weight="1"
                android:gravity="right"
                />

    </LinearLayout>

    <View
            style="@style/bd_wallet_divier_long"
            />

</LinearLayout>