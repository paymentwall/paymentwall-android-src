<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
        >

    <com.baidu.wallet.home.ui.widget.MaskTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wallet_home_asset_click_text_color"
            android:textSize="@dimen/bd_wallet_home_text_size_19"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:duplicateParentState="true"
            />

    <com.baidu.wallet.home.ui.widget.MaskTextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wallet_home_asset_click_text_color"
            android:textSize="@dimen/bd_wallet_home_text_size_12"
            android:layout_marginTop="7dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:duplicateParentState="true"
            />

    <com.baidu.wallet.base.widget.NetImageView
            android:id="@+id/star_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sub_title"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/bd_wallet_home_icon_flag_text_right_margin"
            android:layout_alignTop="@id/sub_title"
            android:visibility="gone"
            />

</RelativeLayout>