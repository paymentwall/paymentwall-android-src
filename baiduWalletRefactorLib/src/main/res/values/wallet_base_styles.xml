<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="bd_wallet_custom_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EbpayPromptDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@color/ebpay_black</item>
        <item name="android:windowBackground">@color/ebpay_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/ebpay_transparent</item>
    </style>
    
    <style name="LoadingDialog" parent="@EbpayPromptDialog">
        <item name="android:backgroundDimAmount">0.0</item>
    </style>

    <style name="EditCommonStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/ebpay_text_size_15</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/wallet_base_6c</item>
    </style>
    
    <style name="EbpayThemeActivit" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    
    <style name="bd_wallet_plugin_update_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/wallet_base_progressbar</item>
    </style>
    
    <style
        name="bd_wallet_safekeyboard_popwindown_anim" parent="android:Animation">
       <item name="android:windowEnterAnimation">@anim/wallet_base_safekeyboard_slide_from_down</item>
       <item name="android:windowExitAnimation">@anim/wallet_base_safekeyboard_slide_to_down</item>
    </style>

    <style name="bd_wallet_divier_long">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/ebpay_item_divider_d9d9d9</item>
    </style>

    <style name="bd_wallet_divier_short" parent="bd_wallet_divier_long">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="bd_wallet_divier_left_margin" parent="bd_wallet_divier_long">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="bd_wallet_next_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/wallet_base_btn</item>
        <item name="android:textColor">@color/wallet_base_btntext_color_selector</item>
        <item name="android:textSize">@dimen/bd_wallet_text_size_normal</item>
    </style>

    <style name="CameraMist" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/camera_mask</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="Voiceprint" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    
    <style name="IdcardDetectStyle">
        <item name="android:windowBackground">@color/camera_mask</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>